<h1>プロフィール管理画面</h1>
<hr>
<aside class="col-md-2">
  <h2><%= gravatar_for @user %></h2>
</aside>

<div class="col-md-10">
  <div class="panel panel-default">
    <div class="panel-heading"><label>ユーザー名：<%= @user.name %></label></div>
    <div class="panel-body">           
        <table class="table table-hover">
          <thead>
            <tr>
              <th>入力項目</th>
              <th>Datebase</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>メールアドレス</td>
              <td><%= @user.email %></td>
              <th></th>
            </tr>
            <tr>
              <td>パスワード</td>
              <td>●●●●●<%= @user.password %></td>
              <th></th>
            </tr>
            <tr>
              <td>プロフィール</td>
              <td><%= @user.comment %></td>
              <th></th>
            </tr>
            <tr>
              <td>生年月日</td>
              <td><%= @user.age %></td>
              <th></th>
            </tr>
          </tbody>
        </table>
      </div>
  </div>
</div>