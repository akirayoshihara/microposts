<h1>プロフィール管理画面</h1>
  <h2><%= link_to "編集画面へ", edit_user_path %><br>
  <%= gravatar_for @user %></h2>


<%= form_for(@user , :html => {:class => 'form-horizontal'} )do |f| %>
    <div class="form-group">
        <label class="control-label col-sm-2" for="id">ユーザー名</label>
        <div class="col-sm-10">
            <%= @user.name %>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="id">プロフィール</label>
        <div class="col-sm-10">
            <%= @user.comment %>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="age">生年月日</label>
        <div class="col-sm-10">
        <%= @user.age %>
        </div>
    </div>
<% end %>